mixin task-card(task)
    div.nn-card.nn-card_task
        div.nn-card__item.nn-card__item_sidebar._relative
            div.nn-b-avatar
                img(src="img/avatar/" + user.imgName + ".jpg")
                if(user.isOnline === true)
                    div.nn-marker.nn-marker_online
                else
                    div.nn-marker

        div.nn-card__item.nn-card__item_sidebar
            div.b-activity
                div.b-activity__item.title.title_activity
                    b=user.name + " "
                    =user.message
                div.b-activity__item.title_light.title_date
                    b= user.date + " "
                    =user.time + " "
                    b PM

div.nn-projects
    div.nn-projects__item
        div.nn-b-search
            div.nn-b-search__item
                input.input.input_search(type="text", placeholder="Search Project, User, Task, etc...")
            div.nn-b-search__item
                div.nn-card.nn-card_search
                    div.nn-card__item.nn-card__item_search
                        div.nn-b-icon.nn-b-icon_search
                            span +
                    div.nn-card__item
                        select
                            option(data-display="New Projects")
                            option Project 1
                            option Project 2
                            option Project 3
                            option Project 4
                            option Project 5

    div.nn-projects__item
        div.accordionContainer
            ul
                li.nn-task
                    div.nn-task__title Slide One
                    div.nn-task__content Content for slide one is rendered from here.
                li.nn-task
                    div.nn-task__title Slide Two
                    div.nn-task__content Content for slide two is rendered from here.
                li.nn-task
                    div.nn-task__title Slide Three
                    div.nn-task__content Content for slide three is rendered from here.
        //for user in userList
            +task-card(task)
