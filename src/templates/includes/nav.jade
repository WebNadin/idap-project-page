mixin nav-card(icon,title,mod, modIcon)
    - mod = mod || ""
    - modIcon = modIcon || ""
    div.nn-card.nn-card_nav
        div.nn-card__item.nn-card__item_nav
            if mod
                svg(class="icon icon_nav icon-" + icon + " _" + modIcon)
                    use(xlink:href="img/symbol-defs.svg#icon-" + icon)
            else
                svg(class="icon icon_nav icon-" + icon)
                    use(xlink:href="img/symbol-defs.svg#icon-" + icon)
        div.nn-card__item
            if mod
                div(class="title title_nav title_" + mod)= title
            else
                div.title.title_nav= title

mixin points
    div.nn-b-points
        div.nn-b-points__item
        div.nn-b-points__item
        div.nn-b-points__item

mixin txt(number, mod)
    - mod = mod || ''
    div(class="nn-txt nn-txt" + mod)=number

section.tools._abs-left
    div.wr_avatar._relative._attention
        +txt('2', '_attention')
        div.nn-b-img
            img.card-img(src="img/avatar-current.jpg")
    nav
        div.nn-nav
            div.nn-nav__item
                +points
                div.wr_card.active
                    +nav-card('meter','Board','white',"attention")
                +points
                div.wr_card._relative
                    +txt('9', '_menu')
                    +nav-card('menu','Projects')
                +points
                div.wr_card
                    +nav-card('cog','Settings')

            div.nn-nav__item
                div.wr_card
                    +nav-card('command','Upgrade')
                +points
                div.wr_card._attention
                    +nav-card('switch','Logout')









